import laskin.Laskin;

public class KirjainLaskinMain {

	public static void main(String[] args) {
		KirjainLaskin laskin = new LaskinAdapteri();

        laskin.virtaON();

        System.out.println("Tulos        =  " + laskin.annaTulos());
        laskin.lisaa('ö');
        System.out.println("Lisää ö("+(int)'ö'+")    -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.lisaa('q');
        System.out.println("Lisää q("+(int)'q'+")    -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.vahenna('q');
        System.out.println("Vähennä q("+(int)'q'+")  -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.vahenna('z');
        System.out.println("Vähennä z("+(int)'z'+")  -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.jaa('>');
        System.out.println("Jaa >("+(int)'>'+"):lla    -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.kerro('w');
        System.out.println("Kerro w("+(int)'w'+"):llä -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.nollaa();
        System.out.println("Nollaa       -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.lisaa('h');
        System.out.println("Lisää h("+(int)'h'+")    -> " + laskin.annaTulos()+"("+(int)laskin.annaTulos()+")");

        laskin.virtaOFF();
	}

}
